{
  "name": "node-chat",
  "version": "1.0.0",
  "description": "Simple NodeJS chat made with SASS, Babel and Fastify",
  "scripts": {
    "start": "node dist/index.js",
    "build": "npm run parcel:build && npm run babel:build",
    "parcel:dev": "parcel src/public/index.html",
    "parcel:build": "parcel build --dist-dir dist src/public/index.html",
    "babel:build": "babel src -d dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jigth/node-chat.git"
  },
  "keywords": [
    "Chat",
    "NodeJS",
    "Fastify",
    "SASS",
    "Sockets"
  ],
  "author": "Jigth",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jigth/node-chat/issues"
  },
  "homepage": "https://github.com/jigth/node-chat#readme",
  "dependencies": {
    "@babel/runtime": "^7.15.3",
    "express": "^4.17.1",
    "fastify": "^3.20.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@parcel/transformer-sass": "2.0.0-rc.0",
    "parcel": "^2.0.0-rc.0"
  }
}
