{
  "name": "node-chat",
  "version": "1.0.0",
  "description": "Simple NodeJS chat made with SASS, Babel and Fastify",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run start-server& npm run start-client&",
    "start-server": "node dist/index.js",
    "start-client": "parcel src/index.html",
    "parcel:dev": "parcel src/index.html",
    "parcel:build": "parcel build src/index.html",
    "babel:build": "babel --presets es2015 src/ -d dist/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jigth/node-chat.git"
  },
  "keywords": [
    "Chat",
    "NodeJS",
    "Fastify",
    "SASS",
    "Sockets"
  ],
  "author": "Jigth",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jigth/node-chat/issues"
  },
  "homepage": "https://github.com/jigth/node-chat#readme",
  "dependencies": {
    "fastify": "^3.20.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-import": "^1.13.3",
    "babel-preset-es2015": "^6.24.1",
    "nodemon": "^2.0.12",
    "parcel-bundler": "^1.12.5",
    "sass": "^1.38.2"
  }
}
